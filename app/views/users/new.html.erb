<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 card p-4 shadow-sm">
      <h2 class="text-center mb-4">Rejoindre la communauté</h2>
      
      <%= form_tag users_path, method: :post do %>
        <div class="mb-3">
          <label class="form-label">Prénom</label>
          <%= text_field_tag :first_name, params[:first_name], class: "form-control" %>
        </div>
        
        <div class="mb-3">
          <label class="form-label">Nom</label>
          <%= text_field_tag :last_name, params[:last_name], class: "form-control" %>
        </div>

        <div class="mb-3">
          <label class="form-label">Ville</label>
          <%# Menu déroulant pour choisir une ville existante %>
          <%= select_tag :city_id, options_from_collection_for_select(City.all, :id, :name), class: "form-select" %>
        </div>

        <div class="mb-3">
          <label class="form-label">Email</label>
          <%= email_field_tag :email, params[:email], class: "form-control" %>
        </div>

        <div class="mb-3">
          <label class="form-label">Mot de passe</label>
          <%= password_field_tag :password, nil, class: "form-control" %>
        </div>

        <div class="mb-3">
          <label class="form-label">Confirmation</label>
          <%= password_field_tag :password_confirmation, nil, class: "form-control" %>
        </div>

        <%= submit_tag "S'inscrire", class: "btn btn-primary w-100" %>
      <% end %>
    </div>
  </div>
</div>