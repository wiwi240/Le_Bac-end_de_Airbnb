<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm border-0">
        <div class="card-body p-5">
          <h2 class="text-center fw-bold mb-4">Créer un compte</h2>

          <% if @user.errors.any? %>
            <div class="alert alert-danger border-0">
              <ul class="mb-0">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= form_with model: @user, local: true do |f| %>
            <div class="row">
              <div class="col-md-6 mb-3">
                <%= f.label :first_name, "Prénom", class: "form-label fw-bold" %>
                <%= f.text_field :first_name, class: "form-control shadow-none", placeholder: "Jean" %>
              </div>
              <div class="col-md-6 mb-3">
                <%= f.label :last_name, "Nom", class: "form-label fw-bold" %>
                <%= f.text_field :last_name, class: "form-control shadow-none", placeholder: "Dupont" %>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :email, "Email", class: "form-label fw-bold" %>
              <%= f.email_field :email, class: "form-control shadow-none", placeholder: "jean.dupont@example.com" %>
            </div>

            <div class="mb-3">
              <%= f.label :city_id, "Ville", class: "form-label fw-bold" %>
              <%= f.collection_select :city_id, City.all, :id, :name, { prompt: "Sélectionnez votre ville" }, { class: "form-select shadow-none" } %>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <%= f.label :password, "Mot de passe", class: "form-label fw-bold" %>
                <%= f.password_field :password, class: "form-control shadow-none" %>
              </div>
              <div class="col-md-6 mb-4">
                <%= f.label :password_confirmation, "Confirmation", class: "form-label fw-bold" %>
                <%= f.password_field :password_confirmation, class: "form-control shadow-none" %>
              </div>
            </div>

            <%= f.submit "S'inscrire", class: "btn btn-primary w-100 py-2 fw-bold" %>
          <% end %>

          <div class="mt-4 text-center">
            <p class="text-muted small">Déjà un compte ? <%= link_to "Se connecter", new_session_path, class: "text-primary text-decoration-none fw-bold" %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>