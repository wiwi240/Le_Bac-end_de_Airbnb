<div class="text-center py-5">
  <div class="mb-4">
    <%= image_tag "logo_v2.png", alt: "Grand Logo", style: "width: 320px; height: auto; border-radius: 20px; box-shadow: 0 10px 30px rgba(0,0,0,0.1);" %>
  </div>
  <h1 class="display-4 fw-bold text-white">Bienvenue sur Gossip</h1>
  <p class="lead text-secondary">Le site des rumeurs et des secrets bien gardés.</p>
  <div class="mt-4">
    <%= link_to "Voir tous les potins", gossips_path, class: "btn btn-primary btn-lg px-5 shadow" %>
  </div>
</div>

<div class="row">
  <% @gossips.each do |gossip| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100 border-0 shadow-sm position-relative">
        <div class="position-absolute top-0 end-0 m-2">
          <span class="badge rounded-pill bg-danger shadow-sm px-3 py-2">
            <%= gossip.likes.count %> ❤️
          </span>
        </div>
        <div class="card-body d-flex flex-column pt-4">
          <h5 class="card-title fw-bold text-primary mt-2"><%= gossip.title %></h5>
          <p class="card-text text-muted mb-4">
            Par : <span class="fw-semibold text-dark"><%= gossip.user.first_name %></span>
          </p>
          <div class="mt-auto border-top pt-3 d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
              <% if logged_in? %>
                <% pre_like = gossip.likes.find { |like| like.user_id == current_user.id } %>
                <% if pre_like %>
                  <%= button_to gossip_like_path(gossip, pre_like), method: :delete, class: "btn btn-link p-0 text-danger text-decoration-none me-2" do %>
                    <small>Unlike</small>
                  <% end %>
                <% else %>
                  <%= button_to gossip_likes_path(gossip), method: :post, class: "btn btn-link p-0 text-primary text-decoration-none me-2" do %>
                    <small>Like</small>
                  <% end %>
                <% end %>
              <% end %>
            </div>
            <%= link_to "Lire", gossip_path(gossip.id), class: "btn btn-outline-primary btn-sm px-3" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>