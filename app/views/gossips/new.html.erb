<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 card p-4 shadow-sm">
      <h2 class="text-center mb-4">Créer un nouveau potin</h2>
      <%= form_tag gossips_path, method: :post do %>
        <div class="mb-3">
          <label class="form-label">Titre</label>
          <%= text_field_tag :title, nil, class: "form-control", placeholder: "Entre 3 et 14 caractères" %>
        </div>
        <div class="mb-3">
          <label class="form-label">Contenu</label>
          <%= text_area_tag :content, nil, rows: 5, class: "form-control", placeholder: "Raconte tout..." %>
        </div>
        <%= submit_tag "Publier le potin", class: "btn btn-primary w-100" %>
      <% end %>
    </div>
  </div>
</div>